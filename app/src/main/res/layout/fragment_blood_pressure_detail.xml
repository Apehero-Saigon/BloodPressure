<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                tools:context=".ui.bloodpressure.BloodPressureInfoFragment">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/buttonBack"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/image"
                        android:padding="18dp"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:contentDescription="@string/button"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/view_result"
                        android:textColor="@color/color_text_special"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/ivwPopupMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:contentDescription="@string/image"
                        android:paddingHorizontal="10dp"
                        android:src="@drawable/ic_three_dot" />

                </LinearLayout>


                <!-- SYSTOLE & DIASTOLE LAYOUT -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtSystoleAndDiastole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/_120_80"
                        android:textColor="@color/black"
                        android:textSize="32sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="5dp"
                        android:contentDescription="@string/image"
                        android:src="@drawable/ic_heart" />

                    <TextView
                        android:id="@+id/txtPulse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/_80"
                        android:textColor="@color/black"
                        android:textSize="32sp" />

                </LinearLayout><!-- end SYSTOLE & DIASTOLE LAYOUT -->

                <TextView
                    android:id="@+id/txtCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/measured_at_17_00pm_21_04_2023"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <!-- PROFILE LAYOUT -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="25dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#EE898E" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp">

                        <TextView
                            android:id="@+id/txtProfileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:paddingVertical="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtProfileYearOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/year_of_birth_2000"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtProfileHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/weight_75"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtProfileWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/height_170"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout> <!-- end PROFILE LAYOUT -->

                <!-- CONCLUSION -->
                <TextView
                    android:id="@+id/txtConclusion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="@string/hypertension_stage_1"
                    android:textColor="@color/color_conclusion_low"
                    android:textSize="18sp" />

                <!-- 2 CIRCLE represents systole & diastole -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- SYSTOLE layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="25dp">

                        <LinearLayout
                            android:id="@+id/circleSystole"
                            android:layout_width="113dp"
                            android:layout_height="113dp"
                            android:background="@drawable/circle_low">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:text="@string/systole"
                                android:textColor="@color/color_text_normal"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtSystoleRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="15dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/systole_range_elevated"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout><!-- end SYSTOLE layout -->

                    <Space
                        android:layout_width="42dp"
                        android:layout_height="match_parent" />
                    <!-- DIASTOLE layout -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="25dp">

                        <LinearLayout
                            android:id="@+id/circleDiastole"
                            android:layout_width="113dp"
                            android:layout_height="113dp"
                            android:background="@drawable/circle_low">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:text="@string/diastole"
                                android:textColor="@color/color_text_normal"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtDiastoleRange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="15dp"
                            android:layout_marginTop="13dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="@string/systole_range_elevated"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout><!-- end SYSTOLE layout -->

                </LinearLayout><!-- end 2 CIRCLE represents systole & diastole -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/recommendations"
                    android:textColor="@color/color_text_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/recommendations_hypertension_stage_2"
                    android:textAlignment="gravity"
                    android:textColor="@color/color_text_normal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDisclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="10dp"
                    android:text="@string/disclaimer_italic"
                    android:textAlignment="center"
                    android:textColor="@color/color_pink_vivid"
                    android:textStyle="bold|italic" />

            </LinearLayout><!-- end CIRCLE represents systole & diastole -->

        </ScrollView>

        <FrameLayout
            android:id="@+id/flBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <include layout="@layout/layout_banner_control" />
        </FrameLayout>
    </LinearLayout>


</layout>