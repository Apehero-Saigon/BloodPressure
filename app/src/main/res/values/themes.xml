<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HeartRateMonitor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:editTextColor">@color/color_text_normal</item>
        <item name="android:textColorPrimary">@color/color_text_normal</item>

        <item name="colorPrimary">@color/colorAds</item>
        <item name="colorPrimaryVariant">@color/colorAds</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAds</item>
        <item name="colorAccent">@color/colorAds</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>

        <!-- this line set theme for popup menu -->
        <item name="popupMenuStyle">@style/popupMenuStyle</item>

    </style>


    <!-- this line set them for popup menu -->
    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/background_popup_menu</item>
    </style>

</resources>